<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="600.0" prefWidth="900.0"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="wordageddon.LetturaTestoController">
    <children>
      <VBox alignment="TOP_CENTER" prefHeight="570.0" prefWidth="880.0">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <children>
            <Label fx:id="documentLabel" text="Documento 1 di N" prefWidth="880.0">
               <font>
                  <Font name="System Bold" size="27.0" />
               </font>
            </Label>
            <ScrollPane fx:id="scrollDocument" prefHeight="350.0" prefWidth="880.0">
                <content>
                  <TextArea fx:id="documentTextArea" editable="false" prefHeight="330.0" prefWidth="860.0" wrapText="true" />
                </content>
              </ScrollPane>
            <HBox alignment="CENTER" prefHeight="80.0" prefWidth="880.0" spacing="80.0">
               <children>
                  <Label prefHeight="31.0" prefWidth="180.0" text="Tempo rimasto:">
                     <font>
                        <Font size="21.0" />
                     </font>
                  </Label>
                  <Label fx:id="timer" text="00:00" textFill="RED" prefWidth="90.0">
                     <font>
                        <Font size="27.0" />
                     </font>
                  </Label>
                  <Button fx:id="quitGameBtn" mnemonicParsing="false" text="Abbandona partita" prefWidth="200.0" />
                  <Button fx:id="nextBtn" mnemonicParsing="false" text="Vai al prossimo documento" prefWidth="250.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>